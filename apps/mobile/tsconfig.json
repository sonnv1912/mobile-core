{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "strict": true,
      "paths": {
         "@components/*": ["./components/*"],
         "@screens/*": ["./screens/*"],
         "@layouts/*": ["./layouts/*"],
         "@assets/*": ["./assets/*"],
         "@configs/*": ["./configs/*"],
         "@utils/*": ["./utils/*"],
         "@types/*": ["./types/*"],
         "@hooks/*": ["./hooks/*"],
         "@/*": ["./*"]
      }
   },
   "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts"]
}
